import random
While True:
mode=input("Please enter your choice of mode :")
if mode 
num=random.randint(1,100) #the range is in the brackets.(lowest,highest)
turns =0
print("Number randomly selected (between 1-100), good luck guessing it! ")
while True:
    guess=int(input("Enter your guess :"))
    if (guess=num):
        print("Guessed right, congrats! :)")
        choice=input("Do you wish to carry on? (Y/N): ").lower
        if choice == "yes" or "y" or "yeah" or "sure":
            continue
        if choice =="n" or "no" or "nah":
            break
    if (guess<num):
        print("Guess higher")
        turns=turns+1
    if(guess>num):
        print("guess lower")
        turns=turns+1
    print("You guessed the number ",num,"after ",turns, " turns")
    
